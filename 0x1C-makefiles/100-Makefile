# Variables

CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

# Rules
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) *~ \#*\# $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

# Ensure the Makefile does not compile if m.h is missing
$(OBJ): m.h

.PHONY: all clean oclean fclean re

